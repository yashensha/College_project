<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/sass/style.css" />
    <title>Admin </title>
  </head>
  <body>
    <nav class="nav-bar">
      <h1 class="heading">Hostelo de gentse</h1>
      <div class="nav-link">
        <a href="/users/login" class="active">Log in</a>
        <a href="/users/signup">Register</a>
      </div>
      <div class="b-icon">
        <i
          class="fa fa-bars b-icon"
          aria-hidden="true"
          onclick="linkTray()"
          id="bars"
        ></i>
      </div>
    </nav>

    <div class="link-tray">
      <i
        class="fa fa-close c-icon"
        onclick="linkTrayClose()"
        aria-hidden="true"
      ></i>
      <a href="/users/login">Login</a>
      <a href="/users/signup">Register</a>
    </div>

    <form action="/users/login" method="post" class="form">

      <div class="inp">
        <label for="name">Mobile Number</label>
        <input
          class="input-primary"
          type="text"
          name="phone"
          placeholder="Enter your Mobile"
          required
        />
      </div>

      <div class="inp">
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          class="input-primary"
          placeholder="Enter your password"
          required
        />
      </div>

      <div class="inp">
        <button class="btn-primary" type="submit">Login</button>
      </div>
    </form>
    <footer class="foot">
      <p class="sml">Developed by&nbsp;<a
          href=""
          class="link"
        >youknowwho</a></p>
    </footer>

    <script
      src="https://kit.fontawesome.com/7d58fde0a7.js"
      crossorigin="anonymous"
    ></script>

    <script>
      function linkTray() { let tray = document.querySelector(".link-tray"); let
      iBar = document.querySelector(".b-icon"); let iClose =
      document.querySelector(".c-icon"); tray.style.top = "69px";
      iBar.style.display = "none"; iClose.style.display = "flex"; } function
      linkTrayClose() { let tray = document.querySelector(".link-tray"); let
      iBar = document.querySelector(".b-icon"); let iClose =
      document.querySelector(".c-icon"); tray.style.top = "-89px";
      iBar.style.display = "flex"; iClose.style.display = "flex"; }
    </script>
  </body>
</html>